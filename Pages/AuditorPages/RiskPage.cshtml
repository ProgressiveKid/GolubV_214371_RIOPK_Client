@page
@model CorporateRiskManagementSystem.Frontend.Pages.AuditorPages.RiskPageModel
@{
    ViewData["Title"] = "Риски департамента";
}
<h2>Риски департамента</h2>

<div id="risks-container">
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Уровень серьезности</th>
            <th>Вероятность</th>
            <th>Дата создания</th>
            <th>Есть ли оценка риска</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody id="risks-table-body">
        <!-- Данные будут вставлены через JS -->
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Загрузка департаментов


            const departmentId = localStorage.getItem('selectedDepartment');

            if (!departmentId) {
                Swal.fire('Ошибка', 'Не выбран отдел.', 'error');
                return;
            }
            loadRisks(departmentId)

            // Слушатель на изменение выбора департамента
            $('#departmentDropdown').on('change', function () {
                const departmentId = $(this).val();

                if (!departmentId) {
                    Swal.fire('Ошибка', 'Пожалуйста, выберите департамент.', 'warning');
                    return;
                }

                loadRisks(departmentId);
            });

            // Функция загрузки рисков
            function loadRisks(departmentId) {
                console.log("Department ID: ", departmentId);
                $.ajax({
                    url: `https://localhost:7248/Risk/GetRisksForDepartment`,
                    type: 'GET',
                    data: { departmentId: departmentId },
                    success: function (data) {
                        renderRiskTable(data);
                    },
                    error: function (xhr, status, error) {
                        Swal.fire('Ошибка', 'Ошибка при получении рисков: ' + error, 'error');
                    }
                });
            }

            function renderRiskTable(data) {
                const tbody = $('#risks-table-body');
                tbody.empty();

                if (!data || data.length === 0) {
                    tbody.append('<tr><td colspan="8" class="text-center">Нет рисков для отображения.</td></tr>');
                    return;
                }

                data.forEach(risk => {
                    const departments = risk.departments?.map(d => d.name).join(', ') || '—';

                      // Если оценка есть — собрать tooltip текст
                        let assessmentInfo = 'Оценка отсутствует';
                        if (risk.isHaveAssessment && risk.riskAssessments) {
                            const { impactScore, probabilityScore, notes } = risk.riskAssessments[0];
                            assessmentInfo = `Влияние: ${impactScore}\nВероятность: ${probabilityScore}\nЗаметки: ${notes ?? '—'}`;
                        }

                    const row = `
                    <tr>
                        <td>${risk.riskId}</td>
                        <td>${risk.title}</td>
                        <td>${risk.description ?? '—'}</td>
                        <td>${risk.severity}</td>
                        <td>${risk.likelihood}</td>
                        <td>${new Date(risk.createdAt).toLocaleDateString()}</td>
                        <td title="${assessmentInfo}">${risk.isHaveAssessment ? '✔' : '—'}</td>
                        <td>
                            <button class="btn btn-danger btn-sm delete-risk-btn"
                                    data-risk-id="${risk.riskId}"
                                    data-risk-title="${risk.title}">
                                Удалить
                            </button>
                        </td>
                    </tr>
                `;
                    tbody.append(row);
                });

                // Добавляем обработчики событий для кнопок удаления
                $('.delete-risk-btn').on('click', function () {
                    const riskId = $(this).data('risk-id');
                    const riskTitle = $(this).data('risk-title');
                    deleteRisk(riskId, riskTitle);
                });
            }

            // Функция удаления риска
            function deleteRisk(riskId, riskTitle) {
                Swal.fire({
                    title: 'Вы уверены?',
                    text: `Вы действительно хотите удалить риск "${riskTitle}"? Это действие нельзя отменить.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Да, удалить',
                    cancelButtonText: 'Отмена',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Показываем индикатор загрузки
                        Swal.fire({
                            title: 'Удаление...',
                            text: 'Пожалуйста, подождите',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        console.log("Отправляю DELETE запрос на:", `https://localhost:7248/Risk/DeleteRisk?riskId=${riskId}`);
                        // Отправляем запрос на удаление
                        $.ajax({
                            url: `https://localhost:7248/Risk/DeleteRisk?riskId=${riskId}`,
                            type: 'DELETE',
                            success: function (response) {
                                Swal.close();

                                // Удаляем строку из таблицы
                                $(`#risk-row-${riskId}`).remove();

                                // Проверяем, остались ли риски
                                if ($('#risks-table-body tr').length === 0) {
                                    $('#risks-table-body').append('<tr><td colspan="8" class="text-center">Нет рисков для отображения.</td></tr>');
                                }

                                Swal.fire({
                                    title: 'Успешно!',
                                    text: 'Риск был успешно удален.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });;
                            },
                            error: function (xhr, status, error) {
                                Swal.close();
                                Swal.fire({
                                    title: 'Ошибка!',
                                    text: 'Не удалось удалить риск: ' + (xhr.responseJSON?.message || error),
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        });
                    }
                });
            }
        });
    </script>
}